<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New Camp</title>
</head>
<body>
<form action="/campgrounds/<%=camp.id%>/update?_method=PATCH" method="post">
    <label for="title">Camp Name:</label>
    <input type="text" value="<%=camp.title%>" id="title" name="title" required>

    <label for="location">Camp Location:</label>
    <input type="text" value="<%=camp.location%>" id="location" name="location">

    <label for="price">Camp Price:</label>
    <input value="<%=camp.price%>" type="number" min="0" max="100" id="price" name="price">

    <label for="description">Camp Descriptor:</label>
    <select name="description" id="description">
        <%for(let ele of descriptors){ %>
        <option <%= ele === camp.description ? 'selected':' ' %> value="<%=ele%>"><%=ele%></option>
        <% } %>
    </select>
    <button>Add Camp</button>
</form>
</body>
</html>